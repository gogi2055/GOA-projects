from turtle import *




width(7)
color("purple")
speed(5)

forward(250)
left(90)

forward(200)
left(90)

forward(250)
left(90)

forward(200)
left(90)


forward(90)
color("yellow")
begin_fill()
left (90)
forward(100)        
right(90)
forward(60)
right(90)
forward(100)
end_fill()

penup()
goto(250, 200)
pendown()

color("red")
begin_fill()
right(150)
forward(250)
left(120)
forward(250)
end_fill()

penup()
goto (0,70)
pendown()

color("green")
begin_fill()
right(240)
forward(50)
left(90)
forward(50)
left(90)
forward(50)

end_fill()

penup()
goto(250,70)
pendown()

begin_fill()
forward(50)
right(90)
forward(50)
right(90)
forward(50)

end_fill()

exitonclick()